{
  "name": "3r-boilerplate",
  "version": "1.0.0",
  "description": "modern, universal and simple web application boilerplate built using cutting-edge technologies",
  "scripts": {
    "lint": "eslint . --ext .jsx,.js",
    "clean": "npm run clean:server && npm run clean:client && rimraf src/build",
    "clean:server": "rimraf src/~build-server src/content/bundle.css src/content/bundle.css.map src/server.js src/server.js.map",
    "clean:client": "rimraf src/~build-client",
    "build:dev": "npm run clean && webpack --env.target=server --env.build=development --progress --display-modules && ncp src/~build-server/server.js src/server.js && ncp src/~build-server/server.js.map src/server.js.map && ncp src/~build-server/bundle.css src/content/bundle.css && ncp src/~build-server/bundle.css.map src/content/bundle.css.map",
    "build:server-prod": "npm run clean:server && webpack --env.target=server --env.build=production --progress --display-modules",
    "build:client-prod": "npm run clean:client && webpack --env.target=client --env.build=production --progress --display-modules",
    "build:prod": "npm run clean && npm run lint && npm run build:server-prod && npm run build:client-prod && mkdir src/build && ncp src/~build-server/server.js src/build/server.js && ncp src/~build-server/server.js.map src/build/server.js.map && ncp src/~build-client/ src/build",
    "dev": "npm run build:dev && node src/server.js",
    "prod": "npm run build:prod && cd src/build && node server.js",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mezzario/3r-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "redux",
    "router",
    "webpack",
    "semantic ui",
    "hmr",
    "hot",
    "module",
    "replacement",
    "express",
    "local",
    "scope",
    "css",
    "less",
    "postcss",
    "autoprefixer",
    "client",
    "server",
    "universal",
    "isomorphic"
  ],
  "author": "Eugene Baranchuk <vencedor@gmail.com> (http://baranchuk.eu/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mezzario/3r-boilerplate/issues"
  },
  "homepage": "https://github.com/mezzario/3r-boilerplate/",
  "dependencies": {
    "cheerio": "^0.22.0",
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "fastclick": "^1.0.6",
    "history": "^4.6.1",
    "lodash.debounce": "^4.0.8",
    "modernizr": "^3.4.0",
    "node-noop": "^1.0.0",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-document-title": "^2.0.2",
    "react-dom": "^15.4.2",
    "react-mixin": "^3.0.5",
    "react-motion": "^0.4.7",
    "react-pure-render": "^1.0.2",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-actions": "^2.0.1",
    "redux-logger": "^3.0.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "semantic-ui": "^2.2.9",
    "serve-favicon": "^2.4.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "compression": "^1.6.2",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.3",
    "exports-loader": "^0.6.4",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "image-webpack-loader": "^3.2.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.2",
    "less-loader": "^4.0.2",
    "mkdirp": "^0.5.1",
    "modernizr-loader": "^1.0.1",
    "ncp": "^2.0.0",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "postcss-loader": "^1.3.3",
    "raw-loader": "^0.5.1",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.4",
    "rimraf": "^2.6.1",
