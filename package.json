{
  "name": "3r-boilerplate",
  "version": "1.0.0",
  "description": "modern, universal and simple web application boilerplate built using cutting-edge technologies",
  "scripts": {
    "lint": "eslint . --ext .jsx,.js",
    "clean": "rimraf src/build",
    "clean:server": "rimraf src/build/server.js src/build/server.js.map src/build/assets.json",
    "clean:client": "rimraf src/build/public",
    "build:dev": "npm run clean && webpack --env.target=server --env.build=development --progress --display-modules",
    "build:server-prod": "npm run clean:server && webpack --env.target=server --env.build=production --progress --display-modules",
    "build:client-prod": "npm run clean:client && webpack --env.target=client --env.build=production --progress --display-modules",
    "build:prod": "npm run clean && npm run lint && npm run build:server-prod && npm run build:client-prod",
    "dev": "npm run build:dev && cd src/build && node server.js",
    "prod": "npm run build:prod && cd src/build && node server.js",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mezzario/3r-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "redux",
    "router",
    "webpack",
    "semantic ui",
    "hmr",
    "hot",
    "module",
    "replacement",
    "express",
    "local",
    "scope",
    "css",
    "less",
    "postcss",
    "autoprefixer",
    "client",
    "server",
    "universal",
    "isomorphic"
  ],
  "author": "Eugene Baranchuk <vencedor@gmail.com> (http://baranchuk.eu/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mezzario/3r-boilerplate/issues"
  },
  "homepage": "https://github.com/mezzario/3r-boilerplate/",
  "dependencies": {
    "classnames": "^2.2.5",
    "compression": "^1.7.0",
    "express": "^4.15.4",
    "fastclick": "^1.0.6",
    "fs-extra": "^4.0.2",
    "history": "^4.7.2",
    "invariant": "^2.2.2",
    "lodash.debounce": "^4.0.8",
    "modernizr": "^3.5.0",
    "node-noop": "^1.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-addons-css-transition-group": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-pure-render": "^1.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.7.2",
